Algoritmo "Exercício #22"

Var
// Seção de Declarações das variáveis 
   soma, i : inteiro

Inicio
// Seção de Comandos, procedimento, funções, operadores, etc... 
   i <- 1

   repita
   
         soma <- (soma + i)
         i <- (i + 1)

   ate (i > 100)
   
   escreval("Total da soma dos 100 primeiros números inteiros:", soma)
   

Fimalgoritmo